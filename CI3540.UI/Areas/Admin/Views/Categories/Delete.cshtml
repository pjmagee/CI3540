
@using CI3540.UI.Areas.Store.Models
@model CategoryViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<h4>All categories in this category will have their parent category link removed.</h4>
<h4>All products in this category will have their category links removed.</h4>

<fieldset>
    <legend>Category <small>Details</small></legend>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Parent Category</dt>
        <dd>@Model.ParentName</dd>
    </dl>
</fieldset>
<fieldset>
    <legend>Child Categories <small>Details</small></legend>
    @if (Model.Children.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Products</th>
                </tr>
            </thead>
            <tbody>
               @foreach (CategoryViewModel category in Model.Children)
               {
                   <tr>
                       <td>@category.Id</td>
                       <td>@category.Name</td>
                       <td>@category.Description</td>
                       <td>@category.NumberOfProducts</td>
                   </tr>
               }
            </tbody>
        </table>
    }
</fieldset>

@using (Html.BeginForm()) {
    <div class="form-actions">
        <input type="submit" class="btn btn-danger" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index", "Categories", new { area = "Admin"}, new { @class = "btn" })
    </div>
}
