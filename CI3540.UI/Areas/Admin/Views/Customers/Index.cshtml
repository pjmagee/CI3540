
@model IEnumerable<CI3540.UI.Areas.Store.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Phone Number</th>
            <th>Forename</th>
            <th>Surname</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.PhoneNumber</td>
                <td>@item.Forename</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        }
    </tbody>
</table>
